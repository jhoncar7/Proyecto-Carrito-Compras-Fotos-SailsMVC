<div class="row">
  <div class="col-md-12">

    <% flash.get('mensaje').forEach(function (msg) { %>
    <div class="alert alert-info text-center" role="alert">
      <%=msg%>
    </div>
    <% }) %>

    <h2>Ordenes</h2>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Fecha</th>
          <th scope="col">Total Fotos</th>
          <th scope="col">Detalles</th>
        </tr>
      </thead>
      <tbody>
        <% ordenes.forEach( orden => { %>
        <tr>
          <td scope="row"><%=orden.id%></a></td>
          <td scope="row"><%=orden.fecha%></td>
          <td scope="row"><%=orden.total%></td>
          <% if (session && session.admin) { %>
            <td><a href="/admin/mis-ordenes/<%=orden.id%>/<%=orden.cliente%>" class="btn btn-info">Ver Detalle</a></td>
          <% } else { %>
            <td><a href="/mis-ordenes/<%=orden.id%>" class="btn btn-info">Ver Detalle</a></td>
            <% } %>
        </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</div>
